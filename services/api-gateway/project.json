{
  "name": "api-gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/api-gateway/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/services/api-gateway",
        "main": "services/api-gateway/src/index.ts",
        "tsConfig": "services/api-gateway/tsconfig.json",
        "assets": ["services/api-gateway/src/assets"]
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx watch services/api-gateway/src/index.ts",
        "env": {
          "SERVICE_NAME": "API Gateway"
        }
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "services/api-gateway/src/index.ts",
        "tsConfig": "services/api-gateway/tsconfig.json",
        "skipTypeCheck": false
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["type:app", "scope:gateway"]
}

