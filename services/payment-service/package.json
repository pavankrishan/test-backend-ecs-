{
  "name": "@kodingcaravan/payment-service",
  "version": "1.0.0",
  "description": "Payment Service",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "npm run clean && tsc -p tsconfig.json",
