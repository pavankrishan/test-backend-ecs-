{
  "name": "chat-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/chat-service/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/services/chat-service",
        "main": "services/chat-service/src/index.ts",
        "tsConfig": "services/chat-service/tsconfig.json",
        "assets": []
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pnpm exec tsx watch services/chat-service/src/index.ts",
        "env": {
          "SERVICE_NAME": "Chat Service"
        }
      }
    },
    "typecheck": {
      "executor": "@nx/js:tsc",
      "options": {
        "main": "services/chat-service/src/index.ts",
        "tsConfig": "services/chat-service/tsconfig.json",
        "skipTypeCheck": false
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"]
    }
  },
  "tags": ["type:app", "scope:chat"]
}

