{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@kodingcaravan/shared": ["../../shared/dist"],
      "@kodingcaravan/shared/*": ["../../shared/dist/*"]
    },
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types"]
  },
  "include": ["src"]
}

