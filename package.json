{
  "name": "kodingcaravan-backend",
  "version": "1.0.0",
  "description": "EdTech Mobile App Backend - Microservices Architecture",
  "private": true,
  "type": "commonjs",
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "dev": "node scripts/dev-start.js",
    "check-services": "node scripts/check-services.js",
    "check-mongo": "node scripts/mongo-check.js",
    "seed-mongo": "node scripts/seed-mongo.js",
    "lint": "nx run-many --target=lint --all",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "nx run-many --target=typecheck --all",
    "clean": "nx reset && rm -rf node_modules **/node_modules **/dist **/.nx",
    "db-check": "node ./scripts/db-check.js",
    "db-debug": "ts-node ./scripts/db-debug.ts",
    "create-example-table": "ts-node ./scripts/create-example-table.ts",
    "migrate:progress": "ts-node ./scripts/run-migration.ts",
    "test-redis": "tsx scripts/test-redis.ts",
    "delete-student-data": "node ./scripts/delete-student-data.js",
    "delete-student-complete": "node scripts/delete-student-complete-run.js",
    "clean-build-artifacts": "node scripts/clean-build-artifacts.js --yes",
    "install:with-scripts": "pnpm install --no-ignore-scripts"
  },
  "keywords": [
    "edtech",
    "microservices",
    "expo",
    "mobile"
  ],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "shared",
    "services/*"
  ],
  "devDependencies": {
    "@nx/js": "^17.2.0",
    "@nx/node": "^17.2.0",
    "@nx/workspace": "^17.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "nx": "^17.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "overrides": {
      "jws": "4.0.0",
      "pg": "8.11.3"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "google-auth-library": "^10.5.0",
    "mongoose": "^8.0.3",
    "pg": "8.11.3",
    "redis": "^5.10.0"
  }
}
