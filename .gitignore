# Prevent accidentally committing compiled JS in TS folders
# Match both src/ subdirectories and root-level service files
services/**/*.js
services/**/*.js.map
services/**/*.d.ts
services/**/*.d.ts.map
# But allow legitimate JS files (config files, etc.)
!services/**/*.config.js
!services/**/jest.config.js
!services/**/jest.setup.js

# Ignore compiled files in shared directory (should only be in dist/)
shared/**/*.js
shared/**/*.js.map
shared/**/*.d.ts
shared/**/*.d.ts.map
!shared/dist/**  # Allow dist folder content
!shared/node_modules/**  # Allow node_modules

# Ignore compiled files in scripts directory (build artifacts from .ts files)
scripts/**/*.js
scripts/**/*.js.map
scripts/**/*.d.ts
scripts/**/*.d.ts.map
!scripts/**/*.config.js  # Allow config files
!scripts/clean-build-artifacts.js  # Allow this script

